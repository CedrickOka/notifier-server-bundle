<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                          https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd"
>
    <mapped-superclass name="Doctrine\Tests\ORM\Mapping\User" table="cms_users">
        <field name="channel" column="channel" type="string" length="32" />
        <field name="paylaod" column="paylaod" type="json" />
        <field name="issuedAt" column="issued_at" type="datetime" />

        <indexes>
            <index name="channel_idx" columns="channel"/>
        </indexes>

        <lifecycle-callbacks>
            <lifecycle-callback type="prePersist" method="prePersist"/>
        </lifecycle-callbacks>
    </mapped-superclass>
</doctrine-mapping>
